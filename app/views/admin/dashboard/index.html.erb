<div class="wrapper wrapper-content">
<div class="container">
<div class="row">
    <div class="col-md-3">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right">All</span>
                <h5>Net Total</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= m @all_total, "THB" %></h1>
                <div class="stat-percent font-bold text-success"><%= @all_total_count %> <i class="fa fa-bolt"></i></div>
                <small>Total Trans</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-info pull-right">Month</span>
                <h5>Net Total</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= m @month_total, "THB" %></h1>
                <div class="stat-percent font-bold text-info"><%= @month_total_count %> <i class="fa fa-level-up"></i></div>
                <small>Total Trans:</small>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-primary pull-right">Today</span>
                <h5>Transaction</h5>
            </div>
            <div class="ibox-content">

                <div class="row">
                    <div class="col-md-6">
                        <h1 class="no-margins"><%= m @today_total, "THB" %></h1>
                    </div>
                    <div class="col-md-6">
                        <h1 class="no-margins"><%= @today_total_count %></h1>
                        <div class="font-bold text-navy"> <small>Transaction</small></div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


<h2>All Charity</h2>

<div class="row">
    <% Charity.all.each  do |c|%>
        <div class="col-md-4">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><%= c.name %></h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins"><%= m c.total, "THB" %></h1>
                </div>
            </div>
        </div>
    <% end %>
</div>