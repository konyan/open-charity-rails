<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
        <h2>Charities

        </h2>

        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboard', :action => 'index' %>">Home</a>
        </li>
        <li class="active">
            <strong>Charities List</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Charities List</h5>
                  <div class="ibox-tools">
                    <%= link_to "Create", new_admin_charity_path, class:"btn btn-info btn-xs"%>
                  </div>
              </div>
              <div class="ibox-content">
                  <table class="table">
                      <thead>
                      <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Total</th>
                          <th>Action</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% @charities.each do |charity|%>
                        <tr>
                            <td><%= charity.id%></td>
                            <td><%= charity.name%></td>
                            <td><%= m charity.total, charity.currency %></td>
                            <td>
                              <%= link_to "show", admin_charity_path(charity), class:"btn btn-primary btn-xs" %>
                              <%= link_to "Delete", admin_charity_path(charity), method: :delete, data: {confirm: "Are you sure to delete charity?"}, class:"btn btn-danger btn-xs"%>
                            </td>
                        </tr>
                      <% end %>
                      </tbody>
                  </table>

              </div>
          </div>
      </div>
  </div>
</div>
