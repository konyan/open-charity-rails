<div class="container">

  <div class="left-column">
    <div class="left-container">
      <h1 class=title>TamBoon</h1>
      <div class="wish-container">
        <h3 class="header">Donation Wish</h3>
        <div class="row">
          <div class="col-lg-6 col-lg-offset-2">
              <div class="ibox">
                  <div class="slick_demo_1">
                      <div>
                          <div class="ibox-content">
                              <h2>Slide 1</h2>
                              <p>
                                  Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem
                                  Ipsum has been the industry's standard dummy text ever since the 1500s, when an
                                  unknown printer took a galley of type and scrambled it to make a type specimen
                                  book. It has survived not only five centuries, but also the leap.
                              </p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      </div>
    </div>
  </div>



  <div class="right-column">
      <div class="row pt-3">
          <div class="col-md-12">
                  <%= form_tag donate_path, id: "donate" do %>
                    <div class="row">
                        <h3 class="charity-title">Pick a charity:</h3>
                        <% Charity.order(:created_at).all.each do |charity| %>
                          <div class="field">
                            <div class="custom-control custom-radio">
                              <%= radio_button_tag :charity, charity.id ,class: "custom-control-input"%>
                              <%= label_tag "charity_#{charity.id}", charity.name ,class:"custom-control-label"%>
                            </div>
                          </div>
                        <% end %>
                    </div>

                    <div class="row">
                      <div class="col-md-6">
                        <div class="input-group">
                          <span class="input-group-addon">$</span>
                          <%= number_field_tag :amount, 500,  min: 50, step: 10,placeholder:"Amount",class:"form-control" , :required => true%>
                          <div class="input-group-addon">THB</div>
                        </div>
                      </div>
                    </div>
                    <div class="row my-wish">
                      <div class="col-md-6">
                        <div class="input-group">
                            <label for="exampleInputEmail1">Donation Wish</label>
                          <%= text_area_tag :description, "",class:"form-control", row:3 %>
                        </div>
                      </div>
                    </div>




                      <%= hidden_field_tag :omise_token %>
                      <%= hidden_field_tag :omise_source %>

                    <div>
                      <%= button_tag(type: 'submit', class: "my-btn btn btn-primary") do %>
                          <i class="smile outline icon"></i>
                          DOATE TODAY
                      <%end %>
                      <span class="cc_error"></span>
                    </div>

                  <% end %>

              </div>
      </div>
  </div>
</div>